    <%= agent.name %> <% agent.bank_value %>
    <% end %>
  </div>


</div>

<div>
  <h4> Import Date Value CSV </h4>
    <%= form_tag import_date_values_path, multipart: true do %>
    <%= file_field_tag :file %>
